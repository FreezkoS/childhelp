<div class="container">
    <div class="wrapper">
       
        <div class="formAuth">
             <h2>Вход</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Почта, class: 'button2' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
<br>
  <div class="field">
    <%= f.label :Пароль, class: 'button2' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: 'button1' %>
      <%= f.label :Запомнить, class: 'button1' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Войти", class: 'button1' %>
  </div>
<% end %>
    </div>
</div>
<%= render "devise/shared/links" %>
</div>